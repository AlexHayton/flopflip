{
  "name": "flopflip",
  "version": "1.0.0",
  "description": "A feature toggle wrapper to use LaunchDarkly with React Redux",
  "main": "dist/flopflip.js",
  "scripts": {
    "lint": "xo",
    "format": "run-p format:md format:js",
    "format:md": "pmd *.md",
    "format:js": "prettier --write --trailing-comma es5 --single-quote 'modules/*.js' 'webpack-config/*.js' 'rollup.config.js' 'demo/*.js'",
    "test": "jest",
    "test:watch": "npm test -- --watch",
    "test-coverage": "jest --coverage",
    "prebuild:umd": "rimraf dist/umd/**",
    "build": "run-p build:umd build:umd:min",
    "build:watch": "cross-env NODE_ENV=development BABEL_ENV=rollup rollup -c -o dist/flopflip.js -w",
    "build:umd": "cross-env NODE_ENV=development BABEL_ENV=rollup rollup -c -o dist/flopflip.js",
    "build:umd:min": "cross-env NODE_ENV=production BABEL_ENV=rollup rollup -c -o dist/flopflip.min.js",
    "preversion": "npm run build"
  },
  "files": ["readme.md", "modules/index.js", "dist/**"],
  "pre-commit": ["lint", "test"],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tdeekens/flopflip.git"
  },
  "author": "Tobias Deekens <nerd@tdeekens.name>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/tdeekens/flopflip/issues"
  },
  "xo": {
    "ignores": ["demo/**/*.js", "config/*.js"],
    "semicolon": true,
    "space": 2,
    "parser": "babel-eslint",
    "extends": [
      "xo-react",
      "prettier",
      "plugin:jest/recommended",
      "prettier/react"
    ],
    "envs": ["es6", "jest"],
    "plugins": ["prettier", "jest"],
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "trailingComma": "es5",
          "singleQuote": true
        }
      ],
      "jest/no-disabled-tests": "warn",
      "jest/no-focused-tests": "error",
      "jest/no-identical-title": "error",
      "jest/valid-expect": "error"
    }
  },
  "homepage": "https://github.com/tdeekens/flopflip#readme",
  "devDependencies": {
    "@commercetools/jest-enzyme-matchers": "^1.1.2",
    "babel-core": "^6.24.0",
    "babel-eslint": "^7.2.3",
    "babel-jest": "^20.0.3",
    "babel-plugin-transform-react-remove-prop-types": "^0.4.6",
    "babel-polyfill": "^6.23.0",
    "babel-preset-env": "^1.4.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-es2015-rollup": "^3.0.0",
    "babel-preset-react": "6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "cross-env": "^5.0.0",
    "enzyme": "^2.9.1",
    "enzyme-to-json": "^1.5.1",
    "eslint-config-prettier": "^2.1.1",
    "eslint-config-xo-react": "^0.13.0",
    "eslint-plugin-jest": "^20.0.3",
    "eslint-plugin-prettier": "^2.0.1",
    "eslint-plugin-react": "^7.1.0",
    "jest": "^20.0.4",
    "npm-run-all": "^4.0.2",
    "prettier": "^1.2.2",
    "prettier-markdown": "^0.1.8",
    "react": "^15.0.0",
    "react-dom": "^15.6.1",
    "react-redux": "^5.0.5",
    "react-test-renderer": "^15.6.1",
    "redux": "^3.7.2",
    "rimraf": "^2.5.4",
    "rollup-plugin-babel": "^2.7.1",
    "rollup-plugin-bundle-size": "^1.0.1",
    "rollup-plugin-commonjs": "^8.0.2",
    "rollup-plugin-includepaths": "^0.2.2",
    "rollup-plugin-node-resolve": "^3.0.0",
    "rollup-plugin-replace": "^1.1.1",
    "rollup-plugin-uglify": "^2.0.0",
    "rollup-watch": "^4.3.1",
    "xo": "^0.18.1"
  },
  "dependencies": {
    "babel-plugin-external-helpers": "^6.22.0",
    "classnames": "^2.2.5",
    "ldclient-js": "^1.1.8",
    "lodash.camelcase": "^4.3.0",
    "lodash.intersection": "^4.4.0",
    "recompose": "^0.24.0",
    "rollup": "^0.45.2"
  },
  "peerDependencies": {
    "prop-types": "15.5.10",
    "react": "^15.6.0",
    "react-dom": "^15.6.0",
    "react-redux": "^5.0.5",
    "redux": "^3.7.2"
  },
  "jest": {
    "globals": {
      "process.env": {
        "NODE_ENV": "test"
      }
    },
    "setupTestFrameworkScriptFile": "./config/jest.js",
    "testRegex": "\\.spec\\.js$",
    "testEnvironment": "jsdom"
  }
}
